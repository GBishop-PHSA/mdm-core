<FindBugsFilter xmlns="https://github.com/spotbugs/filter/3.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0
  https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">
  <!-- Dont match the following rules -->
  <Match>
    <Bug
      pattern="ES_COMPARING_STRINGS_WITH_EQ,SE_NO_SERIALVERSIONID,NP_NULL_PARAM_DEREF_ALL_TARGETS_DANGEROUS,EI_EXPOSE_REP2,EI_EXPOSE_REP,EI_EXPOSE_STATIC_REP2,MS_EXPOSE_REP,ME_ENUM_FIELD_SETTER,BC_VACUOUS_INSTANCEOF,EQ_UNUSUAL,EQ_COMPARETO_USE_OBJECT_EQUALS,CN_IDIOM_NO_SUPER_CALL" />
    <!-- ES_COMPARING_STRINGS_WITH_EQ : Groovy code expects == and != to be used for string comparison -->
    <!-- SE_NO_SERIALVERSIONID : Need to review if we should include this but groovy and grails don't usually by standard -->
    <!-- NP_NULL_PARAM_DEREF_ALL_TARGETS_DANGEROUS : Spotbugs cannot handle groovy closures and believes this issue exists in ALL closures-->
    <!-- EI_EXPOSE_REP2,EI_EXPOSE_REP,EI_EXPOSE_STATIC_REP2 : All the wiring and automatically added methods fire this warning-->
    <!-- MS_EXPOSE_REP : grails_validation_Validateable__constraintsMapInternal and other final static arrays/lists -->
    <!-- EQ_COMPARETO_USE_OBJECT_EQUALS : domain classes have a natural ordering that is inconsistent with equals -->
    <!-- CN_IDIOM_NO_SUPER_CALL : groovy autoclone annotation -->
  </Match>
  <!-- Dont test spec classes -->
  <Match>
    <Class name="~.*\.*Spec" />
  </Match>
  <Match>
    <Package name="~.*\.test\.*" />
  </Match>
  <Match>
    <Class name="~.*\.*gson" />
    <Bug pattern="RANGE_ARRAY_INDEX" />
  </Match>
  <Match>
    <Class name="~.*\.*gml" />
    <Bug pattern="RANGE_ARRAY_INDEX" />
  </Match>
</FindBugsFilter>
